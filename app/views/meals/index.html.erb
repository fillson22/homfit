<div class='d-flex'>
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th></th>
        <th>Вес</th>
        <th>Белки</th>
        <th>Жиры</th>
        <th>Углеводы</th>
        <th>Каллории</th>
      </tr>
    </thead>  
    <tbody>
      <tr> <th> Сегодня: </th> 
        <% current_user.meals.pfcc_total_day.each do |pfcc| %>
          <th> <%= pfcc %> </th>
        <% end %>
      </tr>
    </tbody>  
  </table>
</div>

<div class="d-inline-flex justify-content-center flex-wrap">
  <% Meal.statuses.keys.each do |status| %>
    <%= render 'meal', status: status %>
  <% end %>
</div>


