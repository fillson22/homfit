<div class='d-flex align-items-center'>
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th>Название</th>
        <th>Вес</th>
        <th>Белки</th>
        <th>Жиры</th>
        <th>Углеводы</th>
        <th>Каллории</th>
        <th>Статус</th>
        <th>...</th>
        <th>...</th>
      </tr>
    </thead>  
    <tbody>
      <% if @meals.present? %>
        <% @meals.each do |meal| %>
          <%= render 'meal', meal: meal %>
        <% end %>
      <% else %>
        <h5 class='text-center'>  Приемов пищи не было </h5>
      <% end %>
    </tbody>  
  </table>
</div>
