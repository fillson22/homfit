<div class='card d-flex p-2 bg-secondary'>
  <div class='d-flex'>
    <span style="font-size:0.7em">
      <h5 class='text-center'> <%= status %> </h5>
      <table class="table text-center align-middle">
        <thead>
          <tr class="table-dark">
            <th scope="col">Название</th>
            <th scope="col">В</th>
            <th scope="col">Б</th>
            <th scope="col">Ж</th>
            <th scope="col">У</th>
            <th scope="col">К</th>
            <th scope="col">_</th>
            <th scope="col">_</th>
          </tr>
        </thead>
        <tbody>
          <% @meals.where(status: status, created_at: Time.zone.now.beginning_of_day..Time.zone.now.end_of_day).each do |meal| %>
            <tr>
              <td> <%= link_to meal.dish.name, dish_path(meal.dish) %> </td>
              <td> <%= meal.dish_weight %> </td>
              <% meal.pfcc_meal(meal).each do |pfcc| %>
                <td> <%= pfcc %> </td>
              <% end %>
              <td> <%= link_to '', edit_meal_path(meal), class: 'btn btn-link btn-sm bi-pencil-square', method: :get %> </td>
              <td> <%= button_to '', meal_path(meal), class: 'btn btn-link btn-sm bi-trash', method: :delete %> </td>
            </tr>
          <% end %>
            <tr> 
              <td class='text-center' colspan="8"> <%= link_to '', new_meal_path, class: 'bi-plus-square-fill', title: 'Add meal' %> </td>
            </tr>
            <tr> 
              <th> Итого: </th> 
              <% current_user.meals.pfcc_meal_total(status: status, created_at: Time.zone.now.beginning_of_day..Time.zone.now.end_of_day).each do |pfcc| %>
                <th> <%= pfcc %> </th>
              <% end %>
              <th></th><th></th><th></th>
            </tr>
        </tbody>
      </table>
    </span>
  </div>
</div>