<div class='container d-flex justify-content-center'> 
  <div class="d-flex justify-content-center" style="width: 19rem;height: 19rem;">
    <% if user_signed_in? %>
      <div class="d-flex flex-column align-items-center">
        <% if current_user.person_characteristic.present? %>
          <div> <%= link_to 'Расчитать норму потребления', new_person_characteristic_path, class: "btn btn-success"%> </div>
        <% else %>
          <div> <%= link_to 'Изменить норму потребления', edit_person_characteristic_path, class: "btn btn-success"%> </div>
        <% end %>
        <div> <%= link_to 'Готовить', meals_path, class: "btn btn-primary"%> </div>
        <div class='p-2'> <%= link_to 'Список блюд', dishes_path, class: "btn btn-primary"%> </div>
        <div> <%= link_to 'Список покупок', '#', class: "btn btn-primary"%> </div>
        <div class='p-2'> <%= link_to 'История', report_meals_path, class: "btn btn-primary"%> </div>
      </div>    
    <% else %>
      <div class='d-flex justify-content-center align-items-center'>
        <%= link_to 'Войти', new_user_session_path, class: "btn btn-primary rounded-square p-5"%>
      </div>
    <% end %>
  </div>
</div>
