<p class='text-center'> <%= link_to 'Новое блюдо', new_dish_path, class: "btn btn-primary"%> </p>
<div class='d-flex'>
  <%= search_form_for @q_dish do |f| %>
    <%= f.search_field :name_cont %>
    <%= f.submit 'Поиск', class: 'btn btn-primary' %>
  <% end %>
</div>
<hr>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
<div class='d-flex align-items-center'>
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th>Название</th>
        <th>Белки</th>
        <th>Жиры</th>
        <th>Углеводы</th>
        <th>Каллории</th>
        <th>...</th>
        <th>...</th>
      </tr>
    </thead>  
    <tbody>
      <% if @dishes.present? %>
        <% @dishes.each do |dish| %>
          <%= render 'dish', dish: dish %>
        <% end %>
      <% else %>
      <tr> <td colspan="7"> База пуста </td> </tr>
      <% end %>
    </tbody>  
  </table>
</div>
